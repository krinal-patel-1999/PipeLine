<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_select_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Select Gender"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_select_gender"
            app:layout_constraintStart_toStartOf="@+id/tv_select_gender"
            app:layout_constraintEnd_toEndOf="@+id/tv_select_gender"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_male"
            app:layout_constraintStart_toStartOf="@+id/tv_male"
            app:layout_constraintEnd_toEndOf="@+id/tv_male"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nonBinnary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-Binary"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_female"
            app:layout_constraintStart_toStartOf="@+id/tv_female"
            app:layout_constraintEnd_toEndOf="@+id/tv_female"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_noAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prefer not to answer"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nonBinnary"
            app:layout_constraintStart_toStartOf="@+id/tv_nonBinnary"
            app:layout_constraintEnd_toEndOf="@+id/tv_nonBinnary"/>


        <!--    <com.google.android.material.textview.MaterialTextView-->
        <!--        android:id="@+id/txtItem5"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginLeft="20dp"-->
        <!--        android:text="user"-->
        <!--        android:textColor="@color/black"-->
        <!--        android:textSize="20dp"-->
        <!--        android:textStyle="normal" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
